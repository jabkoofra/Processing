float x=0; //<>//
float y=0;
float ang = radians(45);
float sizeKart = 5;

float nextX =0;
float nextY =1;


String str = new String("F");


void setup() {
  size(600, 600);
}

void moveF() {
  float tempX;
  float tempY;
  tempX = x;
  tempY = y;


  tempY+=1;
  nextX =  tempX*cos(ang) - tempY*sin(ang);
  nextY =  tempX*sin(ang) + tempY*cos(ang);
  tempX = nextX;
  tempY = nextY;

  nextX =  tempX*cos(ang) - tempY*sin(ang);
  nextY =  tempX*sin(ang) + tempY*cos(ang);
  tempX = nextX;
  tempY = nextY;

  tempY+=1;
  nextX =  tempX*cos(-ang) - tempY*sin(-ang);
  nextY =  tempX*sin(-ang) + tempY*cos(-ang);

  nextY+=1;
  nextX =  tempX*cos(-ang) - tempY*sin(-ang);
  nextY =  tempX*sin(-ang) + tempY*cos(-ang);
}

void movePlus() {
  float tempX;
  float tempY;
  tempX = x;
  tempY = y;

  tempY+=1;
  nextX =  tempX*cos(-ang) - tempY*sin(-ang);
  nextY =  tempX*sin(-ang) + tempY*cos(-ang);
  nextY+=1;
}


void drawPoint() {
  float px = map(x, -sizeKart, sizeKart, 0, width);
  float py = map(y, -sizeKart, sizeKart, width, 0);
  stroke(255, 0, 0);
  strokeWeight(8);
  point(px, py);
  stroke(255);
  strokeWeight(4);
}

void drawLine() {
  float px = map(x, -sizeKart, sizeKart, 0, width);
  float py = map(y, -sizeKart, sizeKart, width, 0);
  float npx = map(nextX, -sizeKart, sizeKart, 0, width);
  float npy = map(nextY, -sizeKart, sizeKart, width, 0);
  line(px, py, npx, npy);
}

void draw() {
  background(0);
  stroke(255);
  strokeWeight(4);
  frameRate(1);
  
  char s = str.charAt(0);
  
  if(s == 'F'){
    
      moveF();

  } else if (s == '+'){
    movePlus();
  }
  
  
  drawPoint();
  moveF();
  drawLine();


