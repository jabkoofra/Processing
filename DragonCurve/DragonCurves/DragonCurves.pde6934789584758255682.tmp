float x=0; //<>// //<>//
float y=0;
float ang = degrees(90);

float nextX =0;
float nextY =0;


void setup() {
  size(600, 600);
}

void moveF() {
  y++;
  nextX =  x*cos(ang) - y*sin(ang);
  nextY =  x*sin(ang) + y*cos(ang);
}

void drawPoint() {
  float px = map(x, -1, 1, 0, width);
  float py = map(y, -1, 1, width, 0);
  stroke(255, 0, 0);
  point(px, py);
  stroke(255);
}

void drawLine() {
  float px = map(x, -1, 1, 0, width);
  float py = map(y, -1, 1, width, 0);
  float npx = map(nextX, -1, 1, 0, width);
  float npy = map(nextY, -1, 1, width, 0);
  line(px, py, npx, npy);
}

void draw() {
  background(0);
  stroke(255);
  strokeWeight(4);
  frameRate(1);
  drawPoint();
  moveF();
  drawLine();

